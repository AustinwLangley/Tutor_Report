<!-- If logged in, show this page -->
<% if logged_in? %>
	<!-- Show NavBar --> 
	<%= render 'shared/navbar' %> 
	<div class="col-md-8">
		<!-- display report details -->
		<h1>Report Details:</h1>
		<p><strong>Student ID #: </strong><%= @report.student_nfl_id %> <br><br>
		<strong>Created at:</strong> <%= @report.created_at.strftime("%I:%M%p on %m/%d/%y") %><br><br>
		<strong>What was covered:</strong> <%= @report.what_was_covered %><br><br>
		<strong>Performance:</strong> <%= @report.performance %><br><br>
		<strong>Assignment:</strong> <%= @report.assignment %><br><br>
		<strong>Director flag:</strong> <%= @report.director_flag%><br><br>
		<strong>Parent flag:</strong> <%= @report.parent_flag %>
		</p>
		<!-- Show the section below if the user logged in as admin -->
		<% if current_user.role == "admin" %> 
		<!-- edit button -->
		<%= link_to "Edit this report", edit_report_path(@report), class: "btn btn-warning" %>
		<!-- delete button -->
		<%= link_to "Delete this report", report_path, method: :delete, data: { confirm: "Are you sure you want to delete this report?"}, class: "btn btn-danger"  %>
		<% end %><!-- end admin if statement from above -->
	</div>
	<!-- If not logged in, show this page -->
	<% else %>
        <h1>You are not logged in.  Please log in to access this page.</h1>
        <%= link_to 'Log In', login_path %>
<% end %>