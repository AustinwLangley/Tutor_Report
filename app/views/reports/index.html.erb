<% if logged_in? %>

<%= link_to "Create a new report", new_report_path %>

<% if current_user.role == "admin" %>  

<!-- Search boxes...form_tag is for passing data, form_for is for creating new instances-->
<!-- ******************************************************************************** -->
<%= form_tag reports_path, method: :get do  %>
	<div>
      <%= label_tag :student_id %>
      <%= text_field_tag :student_id %>
    </div>
    <%= submit_tag 'Search' %>
<% end %>

<%= form_tag reports_path, method: :get do  %>
	<div>
      <%= label_tag :director_flag_setting %>
      <%= text_field_tag :director_flag_setting %>
    </div>
    <%= submit_tag 'Search' %>
<% end %>

<%= form_tag reports_path, method: :get do  %>
	<div>
      <%= label_tag :parent_flag_setting %>
      <%= text_field_tag :parent_flag_setting %>
    </div>
    <%= submit_tag 'Search' %>
<% end %>
<!-- ********************************************************************************* -->

<section>
	<h3>Reports</h3>
		<% @reports.each do |report| %>
			<h3>Report #<%= @reports.index(report) +1 %></h3>
			<p><strong>Student ID#<%=report.student_nfl_id%> </strong></p>
			<p><strong>Written by:<%=@user.name%> </strong></p>
		<%= link_to "More info", report_path(report) %>
	<% end %>
</section>

<% else %>
	<section>
		<h3>Reports</h3>
			<% @user.reports.each do |report| %>
			<div>
				<h3>Report #<%= @user.reports.index(report) +1 %></h3>
				<p><strong>Student ID# <%=report.student_nfl_id%> </strong></p>
				<p><strong>Written by:<%=@user.name%> </strong></p>
				<%= link_to "More info", report_path(report) %>
			</div>
		<% end %>
	</section>
<% end %>

Logged in as: <%= current_user.name %> <br><br> <%= link_to 'Log Out', logout_path, method: :delete %>

<% else %>
	 <h1>You are not logged in.  Please log in to access this page.</h1>
  <%= link_to 'Log In', login_path %>

<% end %>
