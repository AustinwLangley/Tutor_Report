<!-- If logged in, show this page -->
<% if logged_in? %>
	<!-- Show NavBar --> 
	<%= render 'shared/navbar' %> 
	<div class="col-md-8">
		<!-- Show the section below if the user logged in as admin -->
		<% if current_user.role == "admin" %> 
			<h1>App Users:</h1>
				<ul>
					<!-- lists all users -->
					<% @users.each do |user| %>
					<li>
						<strong><%= user.name %></strong>
						<%= link_to "More info", user_path(user) %> <!-- link helper method -->
					</li>
					<% end %>
				</ul>
		<% else %>
			<strong><%= @users.name %></strong>
			<%= link_to "More info", user_path(current_user.id)%>
		<% end %>
	</div>
<!-- If not logged in, show this page -->
<% else %>
		<h1>You are not logged in.  Please log in to access this page.</h1>
	  	<%= link_to 'Log In', login_path %>
<% end %>