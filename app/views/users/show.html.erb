<% if logged_in? %>

<section>
	<h1><%= current_user.name %></h1>
	<p><strong>Name:</strong><%= @user.name %></p>
	<p><strong>Email:</strong><%= @user.email%></p>
</section>

<% else %>
	 <h1>You are not logged in.  Please log in to access this page.</h1>
  <%= link_to 'Log In', login_path %>

<% end %>

