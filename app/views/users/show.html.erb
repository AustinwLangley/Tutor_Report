<!-- If logged in, show this page -->
<% if logged_in? %>
	<!-- show the login navbar -->
	<%= render 'shared/navbar' %> 
	<div class="col-md-8">
		<!-- Show the section below if the user logged in as admin -->
		<% if current_user.role == "admin" %> 
			<section>
				<h1><%= current_user.name %></h1>
				<p><strong>Name: </strong><%= @user.name %></p>
				<p><strong>Email: </strong><%= @user.email%></p>
				<!-- edit button -->
			<%= link_to "Edit this user", edit_user_path(@user), class: "btn btn-primary" %>
			<!-- delete button -->
			<%#= link_to "Delete this user", user_path, method: :delete, data: { confirm: "Are you sure you want to delete this user?"}, class: "btn btn-danger"  %>
			</section>
		<% else %>
			<section>
				<p><strong>Name: </strong><%= @user.name %></p>
				<p><strong>Email: </strong><%= @user.email%></p>
				<!-- edit button -->
			<%= link_to "Edit your profile", edit_user_path(@user), class: "btn btn-primary" %>
			<!-- delete button -->
			<%#= link_to "Delete your profile", user_path, method: :delete, data: { confirm: "Are you sure you want to delete this user?"}, class: "btn btn-danger"  %>
			</section>
		<% end %>
	</div>
<!-- If not logged in, show this page -->
<% else %>
	<h1>You are not logged in.  Please log in to access this page.</h1>
  	<%= link_to 'Log In', login_path %>
<% end %>

